<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:s="clr-namespace:mPlant">

    <ControlTemplate x:Key="Part_Info" TargetType="Control">
        <Grid>
            <TextBox x:Name="tb" Text="{}"  Margin="0,5,10,5"/>           
        </Grid>
    </ControlTemplate>
    
    

    <Style TargetType="s:Infor">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="s:Infor">
                    <Grid>
                        <Control x:Name="Panel_Infor"  Visibility="Collapsed" 
                             Template="{StaticResource Part_Info}">
                        </Control>                       
                    </Grid>
                    <ControlTemplate.Triggers>
                        <DataTrigger Value="1" Binding="{Binding RelativeSource={RelativeSource Self}, Path=InforString}">
                            <Setter TargetName="Panel_Infor" Property="Visibility" Value="Visible"/>                           
                        </DataTrigger>                                 
                    </ControlTemplate.Triggers>
                </ControlTemplate>                
            </Setter.Value>
        </Setter>
        
        
            
    </Style>
    
</ResourceDictionary>