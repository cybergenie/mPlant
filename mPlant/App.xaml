<Application x:Class="mPlant.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:mPlant"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Fluent;Component/Themes/Generic.xaml"/>                
                <ResourceDictionary Source="/Resources/RibbonBar.xaml"/>                
                <ResourceDictionary Source="/Resources/ChartTools/ProcessStations.xaml"/>
                <ResourceDictionary Source="/Resources/Expander.xaml"/>
                <ResourceDictionary Source="/Resources/Toolbox.xaml"/>
                <ResourceDictionary Source="/Resources/DesignerItem.xaml"/>
                <ResourceDictionary Source="/Resources/Tooltip.xaml"/>               
                <ResourceDictionary Source="/Resources/StatusBar.xaml"/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Application.Resources>
</Application>
